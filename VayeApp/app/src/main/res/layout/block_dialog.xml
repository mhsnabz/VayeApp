<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_centerInParent="true"
            android:id="@+id/headerTitle"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Bu Kullanıcıyı Engelle"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainText"
            android:textAlignment="center"
            android:layout_margin="4dp"
            android:textSize="12sp"
            android:text="Bu kullanıcı artık size mesaj gönderemeyecek,gönderilerinizi göremeyecek. Bu kullanıcının gönderilerini göremeyeceksiniz"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/black"
            android:layout_below="@id/headerTitle"
            ></TextView>

        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_below="@id/mainText"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <Button
                    android:background="@android:color/transparent"
                    android:textColor="@color/gnt_blue"
                    android:text="VAZGEÇ"
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Button>
                <RelativeLayout
                    android:layout_width="0.4dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@color/black"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    ></RelativeLayout>
            </RelativeLayout>

            <Button
                android:background="@android:color/transparent"
                android:textColor="@color/red"
                android:text="Engelle"
                android:id="@+id/okey"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </Button>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>