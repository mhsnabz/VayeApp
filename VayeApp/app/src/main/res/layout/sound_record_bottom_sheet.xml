<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog"
    android:background="@drawable/bottom_sheet_back"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="12sp"
        android:fontFamily="@font/nunito_semibold"

        android:text="Yeni Bir Kayıt Yapmak İçin Kayıt Butonuna Basın"
        android:id="@+id/text"
        ></TextView>
    <LinearLayout
        android:layout_marginBottom="8dp"
        android:id="@+id/linLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@id/text"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/playAnim"
            >

        </com.airbnb.lottie.LottieAnimationView>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recoedAnim"
            >

        </com.airbnb.lottie.LottieAnimationView>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            android:layout_width="60dp"
            android:id="@+id/sendAnim"
            android:layout_height="60dp">

        </com.airbnb.lottie.LottieAnimationView>
    </LinearLayout>
    <Button
       android:layout_below="@id/linLayout"
        android:background="@drawable/cancel_backgroun"
        android:text="Vazgeç"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="18sp"
        android:id="@+id/dismis"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        ></Button>
</RelativeLayout>