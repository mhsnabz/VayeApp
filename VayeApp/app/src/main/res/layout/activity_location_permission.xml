<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Controller.MapsController.LocationPermissionActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/anim"
        ></com.airbnb.lottie.LottieAnimationView>

    <TextView

        android:layout_below="@id/anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="Konum Servislerini Aç"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/black"
        android:textSize="14sp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/text2"
        android:layout_below="@id/text1"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Seçmek istediğiniz konuma erişebilmemiz için konum servislerini izin vermeniz gerekiyot"
        ></TextView>
        <Button
            android:layout_below="@id/text2"
            android:onClick="permission"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="14sp"
            android:id="@+id/permission"
            android:layout_centerInParent="true"
            android:background="@drawable/button_drive_back"
            android:text="izin ver"
            android:textAllCaps="false"
            ></Button>
    <Button
        android:layout_below="@id/permission"
        android:onClick="permission"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="14sp"
        android:id="@+id/dismis"
        android:layout_centerInParent="true"
        android:background="@drawable/dismis_map_button"
        android:text="Vazgeç"
        android:textAllCaps="false"

        ></Button>
</RelativeLayout>