<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/htab_maincontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Controller.Profile.OtherUserProfileActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/htab_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Light">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/htab_collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="false">

            <RelativeLayout
                android:layout_marginTop="75dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                app:layout_collapseMode="parallax">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/heade"
                    >
                    <RelativeLayout
                        android:layout_margin="8dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/profileImageLayout"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:src="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/profileImage"
                            ></de.hdodenhof.circleimageview.CircleImageView>
                        <ProgressBar
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/progress"
                            android:layout_centerInParent="true"
                            ></ProgressBar>
                    </RelativeLayout>
                    <ImageButton
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/sendMsg"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/profileImageLayout"
                        android:layout_marginLeft="20dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/send_msg"
                        android:onClick="sendMsg"
                        ></ImageButton>
                    <Button
                        android:id="@+id/followButton"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_toEndOf="@id/sendMsg"
                        android:layout_marginLeft="20dp"
                        android:text="Yükleniyor..."
                        android:textSize="12sp"
                        android:background="@drawable/button_fallow_back"
                        android:textColor="@color/white"
                        android:fontFamily="@font/nunito_semibold"
                        android:textAllCaps="false"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_marginRight="12dp"

                        ></Button>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/heade"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="14sp"
                    android:text="Mahsun Abuzeyitoğlu"
                    android:id="@+id/name"
                    android:textStyle="bold"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/name"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="11sp"

                    android:text="İskenderun Teknik Üniversitesi"
                    android:id="@+id/school"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/school"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="11sp"

                    android:text="Bilgisayar Mühendisliği"
                    android:id="@+id/bolum"
                    ></TextView>
                <LinearLayout
                    android:id="@+id/folloLayout"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/bolum"
                    android:layout_marginLeft="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout

                        android:layout_weight="1"
                        android:weightSum="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="4dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/followingCount"
                            android:text="..."
                            android:textSize="14sp"
                            ></TextView>
                        <TextView
                            android:layout_margin="4dp"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:text="Takip Edilen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/followingLbl"
                            ></TextView>
                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginLeft="12sp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="4dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/followerCount"
                            android:text="..."
                            android:textSize="14sp"
                            ></TextView>
                        <TextView
                            android:layout_margin="4dp"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_weight="1"
                            android:text="Takipçi"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/followerLbl"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:layout_marginLeft="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:id="@+id/socialLayot"
                    android:layout_below="@id/folloLayout"
                    android:weightSum="4"
                    >
                    <ImageButton

                        android:id="@+id/github"
                        android:src="@drawable/github"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:layout_width="35dp"
                        android:layout_gravity="center"
                        android:layout_height="35dp">

                    </ImageButton>
                    <ImageButton
                        android:id="@+id/linkedin"
                        android:src="@drawable/linkedin"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:layout_width="35dp"
                        android:layout_gravity="center"
                        android:layout_height="35dp">

                    </ImageButton>
                    <ImageButton
                        android:id="@+id/twitter"
                        android:src="@drawable/twitter"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:layout_width="35dp"
                        android:layout_gravity="center"
                        android:layout_height="35dp">

                    </ImageButton>
                    <ImageButton

                        android:id="@+id/insta"
                        android:src="@drawable/insta"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:layout_width="35dp"
                        android:layout_gravity="center"
                        android:layout_height="35dp">

                    </ImageButton>
                </LinearLayout>
            </RelativeLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"

                android:background="@color/white"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" @mhsnabz"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/toolbar_title" />

            </androidx.appcompat.widget.Toolbar>


            <com.google.android.material.tabs.TabLayout

                android:id="@+id/htab_tabs"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="bottom"
                android:background="@color/white"
                app:tabIndicatorColor="@android:color/black"
                app:tabSelectedTextColor="@android:color/black"
                app:tabTextAppearance="@style/MyCustomTextAppearance"
                app:tabTextColor="@color/gray"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>




    <androidx.viewpager.widget.ViewPager
        android:id="@+id/htab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>