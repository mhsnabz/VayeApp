<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_marginLeft="10dp"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:id="@+id/header"
       >
       <RelativeLayout
           android:id="@+id/profileLay"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_alignParentTop="true"

           >

           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/profileImage"
               android:src="@android:color/darker_gray"
               ></de.hdodenhof.circleimageview.CircleImageView>
           <ProgressBar
               android:id="@+id/progress"
               android:layout_centerInParent="true"
               android:layout_width="20dp"
               android:layout_height="20dp">

           </ProgressBar>
       </RelativeLayout>
       <RelativeLayout
           android:layout_centerVertical="true"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toEndOf="@id/profileLay"
           android:layout_marginLeft="4dp"
           >
           <TextView
               android:text="Mahsun Abuzeyitoğlu"
               android:textSize="12sp"
               android:textColor="@color/black"
               android:fontFamily="@font/nunito_semibold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/name"
               ></TextView>
           <TextView
               android:layout_marginLeft="4dp"
               android:textSize="12sp"
               android:fontFamily="@font/nunito_semibold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toEndOf="@id/name"
               android:id="@+id/username"
               android:text= "mhsnabz"
               ></TextView>
           <TextView
               android:layout_marginLeft="4dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/time"
               android:text="1 sa"
               android:textSize="12sp"
               android:layout_toEndOf="@id/username"
               android:fontFamily="@font/nunito_semibold"
               ></TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/lessonName"
               android:layout_below="@id/name"
               android:text="Bilişim Hukuku"
               android:textSize="10sp"
               android:fontFamily="@font/nunito_semibold"
               ></TextView>
       </RelativeLayout>
       <ImageButton
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           android:background="@android:color/transparent"
           android:layout_marginRight="10dp"
           android:src="@drawable/more"
           android:scaleType="fitXY"
           android:contentDescription="TODO"></ImageButton>
   </RelativeLayout>
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="8dp"
        android:text="Yeni Duyuru vs vs vsYeni Duyuru vs vs vs Yeni Duyuru vs vs vsYeni Duyuru vs vs vsYeni Duyuru vs vs vsYeni Duyuru vs vs vsYeni Duyuru vs vs vsYeni Duyuru vs vs vsYeni Duyuru vs vs vs"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/black"
        android:textSize="13sp"
        ></TextView>
</RelativeLayout>