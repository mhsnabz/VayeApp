<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/groupDate"

        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/date_group"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        ></TextView>
    <RelativeLayout
        android:id="@+id/playerRel"
        android:layout_below="@id/groupDate"

        android:layout_alignParentStart="true"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/received_text_bg"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/playButton"
            android:layout_marginLeft="2dp"
            android:background="@android:color/transparent"
            android:src="@drawable/play_button"
            ></ImageButton>
        <SeekBar
            android:layout_width="200dp"
            android:layout_height="4dp"
            android:layout_toEndOf="@id/playButton"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="2dp"
            android:thumbTint="@color/white"
            android:backgroundTint="@color/black"
            android:progressTint="@color/black"
            android:progress="10"
            android:id="@+id/seekBar"
            ></SeekBar>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timer"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="04:12"
            android:textSize="8sp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="@color/black"
            android:layout_marginRight="2dp"

            ></TextView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerRel"
        android:layout_toEndOf="@id/profileLay"
        android:textSize="8sp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="@color/ligthGray"
        android:layout_marginTop="3dp"
        android:id="@+id/time"

        ></TextView>
    <RelativeLayout
        android:id="@+id/profileLay"
        android:layout_alignParentStart="true"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/playerRel"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="4dp"

        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profileImage"
            ></de.hdodenhof.circleimageview.CircleImageView>
        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:id="@+id/progress"
            ></ProgressBar>
    </RelativeLayout>
</RelativeLayout>