<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog"
    android:background="@drawable/bottom_sheet_back"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        >
        <TextView
            android:textAlignment="center"
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_semibold"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/addresss"
            android:layout_below="@id/title"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textAlignment="center"
            ></TextView>
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addresss"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >
            <Button

                android:layout_weight="1"
                android:layout_below="@id/header"
                android:background="@drawable/button_fallow_back"
                android:text="Konumu Seç"
                android:textAllCaps="false"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="12sp"
                android:id="@+id/select"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"

                ></Button>
            <Button
                android:layout_weight="1"
                android:layout_below="@id/header"

                android:text="Vazgeç"
                android:background="@drawable/button_unfollow_back"
                android:textAllCaps="false"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="12sp"
                android:id="@+id/dismis"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"

                ></Button>
        </LinearLayout>
    </RelativeLayout>




</RelativeLayout>