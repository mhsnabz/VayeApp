<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Controller.Profile.EditProfileActivity">
<include layout="@layout/custom_toolbar" android:id="@+id/toolbar"></include>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/usernameLay"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@android:color/transparent"
            android:layout_width="25dp"
            android:src="@drawable/username"
            android:layout_height="25dp">
        </ImageButton>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/username"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@id/imageButton1"
            android:digits="0123456789qwertzuiopasdfghjklyxcvbnm._-"
            android:fontFamily="@font/nunito_semibold"
            android:hint=" @kullanıcıadi"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="12dp"
            app:met_floatingLabel="normal" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/githubLay"
        android:layout_below="@id/usernameLay"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@android:color/transparent"
            android:layout_width="25dp"
            android:src="@drawable/github"
            android:layout_height="25dp">
        </ImageButton>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/github"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@id/imageButton2"
            android:digits="0123456789qwertzuiopasdfghjklyxcvbnm._-"
            android:fontFamily="@font/nunito_semibold"
            android:hint=" @github"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="12dp"
            app:met_floatingLabel="normal" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/linkedIn"
        android:layout_below="@id/githubLay"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@android:color/transparent"
            android:layout_width="25dp"
            android:src="@drawable/linkedin"
            android:layout_height="25dp">
        </ImageButton>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/linkedin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@id/imageButton3"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Linked.in profil linki"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="12dp"
            app:met_floatingLabel="normal" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/instaLay"
        android:layout_below="@id/linkedIn"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@android:color/transparent"
            android:layout_width="25dp"
            android:src="@drawable/insta"
            android:layout_height="25dp">
        </ImageButton>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/insta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@id/imageButton4"
            android:digits="0123456789qwertzuiopasdfghjklyxcvbnm._-"
            android:fontFamily="@font/nunito_semibold"
            android:hint=" @instagram"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="12dp"
            app:met_floatingLabel="normal" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/twitterLay"
        android:layout_below="@id/instaLay"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@android:color/transparent"
            android:layout_width="25dp"
            android:src="@drawable/twitter"
            android:layout_height="25dp">
        </ImageButton>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/twitter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint=" @twitter"
            android:textAlignment="center"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="12dp"
            android:inputType="text"
            android:digits="0123456789qwertzuiopasdfghjklyxcvbnm._-"
            app:met_floatingLabel="normal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@id/imageButton5"
            />
    </RelativeLayout>
</RelativeLayout>