<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Controller.VayeAppController.VayeAppNewPostActivity">
    <include layout="@layout/toolbar_layout"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        ></include>

    <include layout="@layout/lesson_post_header"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        ></include>
    <EditText
        android:layout_below="@id/header"

        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:maxHeight="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:drawablePadding="5dp"
        android:singleLine="false"
        android:inputType="textCapSentences|textMultiLine"
        android:hint="Yeni Bir Duyuru Yap..."

        android:fontFamily="@font/nunito_semibold"
        android:textSize="12sp"
        android:isScrollContainer="true"
        android:padding="5dp"
        android:maxLines="4" />
    <LinearLayout
        android:id="@+id/stack"
        android:layout_below="@id/text"
        android:layout_weight="100"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/gallery"
            android:src="@drawable/gallery_btn"
            android:background="@android:color/transparent"

            android:layout_weight="20"
            android:layout_width="40dp"
            android:layout_height="40dp"
            ></ImageButton>
        <ImageButton
            android:id="@+id/price"
            android:src="@drawable/price"
            android:background="@android:color/transparent"

            android:layout_weight="20"
            android:layout_width="40dp"
            android:layout_height="40dp"
            ></ImageButton>
        <ImageButton
            android:id="@+id/map_pin"
            android:src="@drawable/map_pin"
            android:background="@android:color/transparent"

            android:layout_weight="20"
            android:layout_width="40dp"
            android:layout_height="40dp"
            ></ImageButton>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/locationLayout"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/stack"
        >
        <ImageButton
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:src="@drawable/location_pin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/location_pin"
            ></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/location_pin"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="14sp"
            android:text="Konum Eklendi"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:id="@+id/locationName"
            ></TextView>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/cancelButton"
            android:src="@drawable/cancel"
            android:layout_toEndOf="@id/locationName"
            android:layout_marginLeft="4dp"
            android:background="@android:color/transparent"
            ></ImageButton>
    </RelativeLayout>
    <RelativeLayout

        android:id="@+id/priceLayout"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/locationLayout"
        >
        <ImageButton
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:src="@drawable/price"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/priceImage"
            ></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/priceImage"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="14sp"
            android:text="Konum Eklendi"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:id="@+id/totalPrice"
            ></TextView>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/cancelPriceButton"
            android:src="@drawable/cancel"
            android:layout_toEndOf="@id/totalPrice"
            android:layout_marginLeft="4dp"
            android:background="@android:color/transparent"
            ></ImageButton>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/priceLayout"
        android:id="@+id/datasRec"
        android:layout_margin="2dp"
        >

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>