<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="1dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:id="@+id/profileLay"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@android:color/darker_gray"
                android:id="@+id/profileImage"
                ></de.hdodenhof.circleimageview.CircleImageView>
            <ProgressBar
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:id="@+id/progress"
                ></ProgressBar>
        </RelativeLayout>


        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/profileLay"
            android:layout_marginLeft="6dp"

            android:layout_toStartOf="@id/likeBtn"
            android:layout_marginTop="10dp"
            android:id="@+id/nameLinLay"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="12sp"

                >

            </TextView>
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"

                android:fontFamily="@font/nunito_semibold"
                android:textSize="12sp"

                >

            </TextView>
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="12sp"
                ></TextView>
        </LinearLayout>

        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@android:color/transparent"
            android:src="@drawable/like_unselected"
            android:scaleType="fitXY"
            android:id="@+id/likeBtn"
            android:layout_marginLeft="4dp"
            ></ImageButton>

        <TextView
            android:id="@+id/msgText"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileLay"
            android:layout_toEndOf="@id/profileLay"
            android:layout_toStartOf="@id/likeBtn"
            android:fontFamily="@font/nunito_sans_semibold"

            android:textColor="@color/black"
            ></TextView>
        <LinearLayout
            android:id="@+id/linLayReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/msgText"
            android:layout_toEndOf="@id/profileLay"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/nunito_semibold"
                android:textStyle="bold"
                android:textSize="8sp"
                ></TextView>
            <TextView
                android:id="@+id/likeTextButton"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beğeni"
                android:fontFamily="@font/nunito_semibold"
                android:textStyle="bold"
                android:textSize="8sp"
                ></TextView>
            <TextView
                android:id="@+id/replyTextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito_semibold"
                android:textStyle="bold"
                android:text="Yanıtla"
                android:textSize="8sp"
                ></TextView>

        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/linLayReply"
            android:id="@+id/relLayReply"
            android:layout_alignStart="@id/linLayReply"
            android:layout_marginTop="8dp"

            >
            <RelativeLayout
                android:id="@+id/line"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:background="@color/black"
                android:layout_height="1dp"
                ></RelativeLayout>
            <TextView
                android:id="@+id/replyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/line"
                android:layout_marginLeft="4dp"

                android:fontFamily="@font/nunito_semibold"
                android:textSize="10sp"
                ></TextView>

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>