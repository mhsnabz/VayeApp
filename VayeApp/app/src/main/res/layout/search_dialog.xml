<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    app:cardCornerRadius="4dp"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/searh"
            android:background="@drawable/textview_back"
            android:maxLines="1"
            android:layout_alignParentTop="true"

            android:scrollbars="vertical"
            android:fontFamily="@font/nunito_semibold"
            android:hint="   Aa..."
            android:textSize="14sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@id/searh"
            android:background="@android:color/darker_gray"
            android:id="@+id/line"
            ></RelativeLayout>
        <com.vaye.app.Util.MaxHeightRecyclerView
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:id="@+id/list"
            app:maxHeight = "200dp"
            ></com.vaye.app.Util.MaxHeightRecyclerView>
        <RelativeLayout
            android:layout_below="@id/list"
            android:background="@drawable/footer_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/desp"
                android:text="Arama yapmak için isim yada @kullanıcıAdı girin"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textSize="10sp"


                ></TextView>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>